name: Deploy WealthWisdom to GitHub Pages

on:
  push:
    branches:
      - main

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ“¥
        uses: actions/checkout@v4

      - name: Setup Node.js âš™ï¸
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          # æ³¨æ„ï¼šé€™è£¡åš´ç¦æ·»åŠ  cache: 'npm'

      - name: Build Project ğŸ—ï¸
        run: |
          # 1. å»ºç«‹ç™¼å¸ƒç›®éŒ„çµæ§‹
          mkdir -p dist/pages
          
          # 2. è¤‡è£½æ ¹ç›®éŒ„å¿…è¦æª”æ¡ˆ
          cp index.html dist/
          cp index.tsx dist/
          cp App.tsx dist/
          cp types.ts dist/
          cp constants.tsx dist/
          cp geminiService.ts dist/
          cp metadata.json dist/
          cp app-blueprint.yaml dist/
          
          # 3. è¤‡è£½ pages è³‡æ–™å¤¾å…§çš„æ‰€æœ‰çµ„ä»¶
          if [ -d "pages" ]; then
            cp pages/*.tsx dist/pages/
          fi
          
          echo "Build completed successfully."

      - name: Inject API Key ğŸ”
        run: |
          # å°‡ GitHub Secrets ä¸­çš„ API_KEY æ³¨å…¥åˆ° geminiService.ts
          # å› ç‚ºç€è¦½å™¨ç«¯æ²’æœ‰ process.envï¼Œæ‰€ä»¥ç›´æ¥æ›¿æ›ä»£ç¢¼ä¸­çš„è®Šæ•¸
          if [ -f "dist/geminiService.ts" ]; then
            sed -i "s/process.env.API_KEY/'${{ secrets.API_KEY }}'/g" dist/geminiService.ts
            echo "API Key injected."
          else
            echo "Error: geminiService.ts not found in dist/"
            exit 1
          fi

      - name: Deploy to GitHub Pages ğŸš€
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
          force_orphan: true
          publish_branch: gh-pages
