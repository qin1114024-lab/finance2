name: Deploy WealthWisdom to GitHub Pages

on:
  push:
    branches:
      - main

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ“¥
        uses: actions/checkout@v4

      - name: Setup Node.js âš™ï¸
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          # é‡è¦ï¼šå¾¹åº•ç§»é™¤ cache: 'npm'ï¼Œå› ç‚ºå°ˆæ¡ˆä¸å« package-lock.json

      - name: Build Project ğŸ—ï¸
        run: |
          # å»ºç«‹ç™¼å¸ƒç›®éŒ„çµæ§‹
          mkdir -p dist
          
          # è¤‡è£½æ ¹ç›®éŒ„å¿…è¦æª”æ¡ˆ
          cp index.html dist/
          cp index.tsx dist/
          cp App.tsx dist/
          cp types.ts dist/
          cp constants.tsx dist/
          cp geminiService.ts dist/
          cp metadata.json dist/
          cp app-blueprint.yaml dist/
          
          # è¤‡è£½ pages è³‡æ–™å¤¾ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
          if [ -d "pages" ]; then
            cp -r pages dist/
          fi

      - name: Inject API Key ğŸ”
        run: |
          # å°‡ GitHub Secrets ä¸­çš„ API_KEY æ³¨å…¥åˆ° geminiService.ts
          # ç€è¦½å™¨ç’°å¢ƒç„¡æ³•è®€å– process.envï¼Œæ‰€ä»¥ç›´æ¥ç”¨å­—ä¸²æ›¿æ›
          if [ -f "dist/geminiService.ts" ]; then
            sed -i "s/process.env.API_KEY/'${{ secrets.API_KEY }}'/g" dist/geminiService.ts
          fi

      - name: Deploy to GitHub Pages ğŸš€
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
          force_orphan: true
          publish_branch: gh-pages
