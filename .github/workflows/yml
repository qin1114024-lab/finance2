name: Deploy WealthWisdom to GitHub Pages

on:
  push:
    branches:
      - main

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ“¥
        uses: actions/checkout@v4

      - name: Setup Node.js âš™ï¸
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          # ä¸è¨­å®š cache: 'npm'ï¼Œå› ç‚ºæœ¬å°ˆæ¡ˆç„¡ package-lock.json

      - name: Build Project ğŸ—ï¸
        run: |
          # å»ºç«‹ç™¼å¸ƒç›®éŒ„
          mkdir -p dist
          
          # è¤‡è£½æ ¹ç›®éŒ„æ‰€æœ‰å¿…è¦çš„ç¨‹å¼æª”æ¡ˆèˆ‡è¨­å®š
          cp index.html dist/
          cp index.tsx dist/
          cp App.tsx dist/
          cp types.ts dist/
          cp constants.tsx dist/
          cp geminiService.ts dist/
          cp metadata.json dist/
          cp app-blueprint.yaml dist/
          
          # è¤‡è£½ pages è³‡æ–™å¤¾åŠå…¶å…§å®¹
          if [ -d "pages" ]; then
            cp -r pages dist/
