name: Deploy WealthWisdom to GitHub Pages

on:
  push:
    branches:
      - main

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ“¥
        uses: actions/checkout@v4

      - name: Setup Node.js âš™ï¸
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          # å·²ç§»é™¤ cache: 'npm'ï¼Œé¿å…å› ç¼ºå°‘ lock æª”æ¡ˆå°è‡´å ±éŒ¯

      - name: Build Project ğŸ—ï¸
        run: |
          # å»ºç«‹ç™¼å¸ƒç›®éŒ„çµæ§‹
          mkdir -p dist/pages
          
          # è¤‡è£½æ ¹ç›®éŒ„å¿…è¦æª”æ¡ˆ
