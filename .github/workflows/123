          cp metadata.json dist/
          cp app-blueprint.yaml dist/
          
          # è¤‡è£½é é¢å…ƒä»¶
          cp pages/*.tsx dist/pages/

      - name: Inject API Key ğŸ”
        run: |
          # å°‡ GitHub Secrets ä¸­çš„ API_KEY æ³¨å…¥åˆ°ç¨‹å¼ç¢¼ä¸­
          # ä½¿ç”¨ sed æ›¿æ›å­—ä¸²ï¼Œæ³¨æ„é€™è£¡ä½¿ç”¨å–®å¼•è™ŸåŒ…è£¹ Secrets å€¼ä»¥ç¬¦åˆ JS èªæ³•
          if [ -f "dist/geminiService.ts" ]; then
